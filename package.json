{
  "name": "base-starter-js",
  "version": "1.0.0",
  "description": "Basic repository for JS projects",
  "author": "Rinat Khusnutdinov <rfkhusnutdinov@yandex.ru>",
  "license": "MIT",
  "type": "module",
  "browserslist": [
    ">0.3%",
    "defaults",
    "fully supports es6-module"
  ],
  "scripts": {
    "lint:js": "eslint src/**/*.{js,ts,astro} --fix || true",
    "lint:css": "stylelint --fix ./src/**/*.{scss,css}",
    "lint:all": "npm run eslint && npm run stylelint",
    "prettier": "prettier \"**/*.+(js|json|scss|css|less|ts|jsx|mjs)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "build:styles": "rm -rf ./dist/css/. && node scripts/build-styles.js --prod",
    "build:scripts": "rm -rf ./dist/js/. && node scripts/build-scripts.js --prod",
    "build:prod": "node scripts/clean-dist.js && node scripts/build-styles.js --prod && node scripts/build-scripts.js --prod"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.7",
    "@eslint/js": "^9.19.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.20",
    "chokidar": "^4.0.3",
    "clean-css": "^5.3.3",
    "cssnano": "^7.0.6",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "rollup": "^4.34.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.83.4",
    "stylelint": "^16.14.1",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard-scss": "^14.0.0"
  }
}
